<% if !current_user.is_blocked?(@user) && !@user.is_blocked?(current_user) %>
  <div>
    <div>
      Email: <strong><%= @user.email %></strong>
    </div>
    <div>
      Name: <strong><%= @user.name.capitalize %></strong>
    </div>
    <div>
      Phone: <strong><%= @user.phone %></strong>
    </div>
    <div>
      Gender: <strong><%= @user.gender.capitalize %></strong>
    </div>
    <div>
      Birth: <strong><%= @user.birth %></strong>
    </div>
    <% unless current_user == @user %>
      <div class='block_form'>
        <%= render 'block', user: @user %>
      </div>
    <% end %>
  </div>
<% else %>
  <div>
    <center><h1><%= @user.name %> blocked</h1></center>
  </div>
<% end %>